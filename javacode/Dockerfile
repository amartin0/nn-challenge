# Base stage: lightweight JDK image to run the app
FROM eclipse-temurin:17-jdk-jammy

# Working directory
WORKDIR /app

# Copy the jar file generated by Maven
COPY target/*.jar app.jar

# Define environment variable to display the tag
ENV IMAGE_TAG="latest"

# Expose the app port
EXPOSE 8080

# Run the application
ENTRYPOINT ["java", "-jar", "app.jar"]